program = declaration* EOF .

declaration = var_decl .
var_decl = identifier "=" expression ";" .

expression = term .
term = call ( "+" call )* .
call = primary ( "(" call_args? ")" )* .
primary = number | identifier | "(" expression ")" .

call_args = expression ( "," expression )* .
identifier = alpha ( alpha | digit )* .
number = digit+ ( "." digit+ )? .

alpha = "_" | upper | lower .
upper = "A..Z" .
lower = "a..z" .
digit = "0..9" .
